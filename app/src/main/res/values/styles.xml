        <item name="colorControlHighlight">@color/green</item>
    </style>
-->



    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#537a9e</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/colorAccent</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">@color/colorAccent</item> <!-- activated color change as you wish -->
        <item name="android:textColor">#000</item> <!-- checkbox text color -->
    </style>

    <style name="customCheckBox">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>


</resources>
